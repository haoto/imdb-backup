{
  "manifest_version": 2,

  "name": "IMDb Message Board Backup",
  "description": "Backup your IMDb message board posts",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "IMDb Message Board Backup"
  },

  "background" : {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "activeTab",
    "http://www.imdb.com/",
    "downloads"
   ]
}

