{
  "manifest_version": 2,

  "name": "IMDb Message Board Backup",
  "description": "Backup your IMDb message board posts",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "http://www.imdb.com/",
   "downloads"
   ]
}

